@page "/signup"
@model HomeSHS.Pages.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>

<form method="post">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.request.FirstName" required>
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.request.LastName" required>
    </div>
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.request.Email" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="Password" value="@Model.request.Password" required>
    </div>
    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="password" name="Password" value="@Model.request.PasswordConfirm" required>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
